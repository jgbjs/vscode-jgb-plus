{
	"name": "vscode-jgb-plus",
	"displayName": "vscode-jgb-plus",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:json",
		"onLanguage:jsonc",
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onLanguage:less",
		"onLanguage:css",
		"onLanguage:scss",
		"onLanguage:xml",
		"onLanguage:html",
		"onLanguage:wxml"
	],
	"contributes": {
		"configuration": {
			"title": "jgb plus",
			"properties": {
				"jgb-plus.multilineComments": {
					"type": "boolean",
					"description": "Whether the multiline comment highlighter should be active",
					"default": true
				},
				"jgb-plus.highlightPlainText": {
					"type": "boolean",
					"description": "Whether the plaintext comment highlighter should be active",
					"default": false
				}
			}
		}
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}